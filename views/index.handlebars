<div class="container">


  <div class="logo">
    <img src="https://www.pngkey.com/png/full/177-1773927_bobs-burgers-bobs-burgers-logo-png.png" alt="logo">
    <h2 class="slogan">Come meet our family, and let us meat you!</h2>
    
  </div>
  <div class="item1">
    
    <h2>Burgers that we have available</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="item2">
    <h2>Burgers that you've eaten!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="item3">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Title:</label>
        <input type="text" id="bu" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Tested?</label><br>
        <input type="radio" name="devoured" value="1" checked> I ate this already<br>
        <input type="radio" name="devoured" value="0"> I need to eat this!
      </div>

      <button type="submit">Add burger</button>
    </form>
    <img src="https://media0.giphy.com/media/2yzgUD4Cb2XLNRowgr/source.gif" alt="dancing bob" class="dancingbob">
  </div>
</div>